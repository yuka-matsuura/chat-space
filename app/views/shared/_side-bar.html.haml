.side-bar
  .user-information
    %h3.user-information__user-name
      = current_user.name
    .user-information__icon-lists
      .icon-list
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      .icon-list
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: 'icon'
  .groups
    = render partial: "messages/group"
