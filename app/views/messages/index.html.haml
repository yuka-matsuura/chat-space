.wrapper
  = render partial: "shared/side-bar"
  .chat
    .header
      .left-header
        .left-header__group-name group1
        .left-header__group-members
          .group-member Member :
          .group-member user-name
          .group-member user-name2
      .right-header
        .right-header__edit-button Edit
    .messages
      =render partial: "messages/message"
    %form.message-form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'message-text', placeholder: "type a message"
        .image-form
          = f.label :image, class: 'image-form__message-image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form-submit'
